<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:paddingBottom="@dimen/_25sdp"
    tools:context="com.webmarke8.app.medlab.Fragments.Water_Remainder">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/water_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/TextHeading"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="You are doing great, 1 more \n cup to reach daily \n intake water" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/water_glass" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/glass_shadow" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_weight="0.30"
        android:background="@drawable/number_of_cup_background"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:paddingStart="@dimen/_30sdp">

        <ImageView
            android:id="@+id/Decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/less_icon" />

        <TextView
            android:id="@+id/Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:text="7 of 8 glasses"
            android:textColor="#b8332e"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_icon" />
    </LinearLayout>

</LinearLayout>
