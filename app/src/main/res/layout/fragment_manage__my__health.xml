<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    tools:context="com.mcc.medlabs.view.Fragments.Manage_My_Health">


    <LinearLayout
        android:id="@+id/Water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/WaterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/water_icon"
            android:tint="@color/textColor" />

        <TextView
            android:id="@+id/WaterName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/_7sdp"
            android:text="@string/water_remeinder"
            android:textColor="@color/textColor" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/input_line" />

    <LinearLayout
        android:id="@+id/BMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp">

        <ImageView
            android:id="@+id/BMIIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/bmi_icon"
            android:tint="@color/textColor" />

        <TextView
            android:id="@+id/BmiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_7sdp"
            android:text="@string/bmi_calculator"
            android:textColor="@color/textColor" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/input_line" />

    <LinearLayout
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
       >

        <ImageView
            android:id="@+id/TimeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_used"
            android:tint="@color/textColor" />

        <TextView
            android:id="@+id/TimeName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"            android:paddingStart="@dimen/_7sdp"
            android:text="@string/time_used"
            android:textColor="@color/textColor" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/input_line" />


</LinearLayout>
