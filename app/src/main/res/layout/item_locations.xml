<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/custom_bg"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingStart="@dimen/_7sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_pin_list_item" />

                    <TextView
                        android:id="@+id/Name"
                        android:lines="1"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="Zahran Central laboratory"
                        android:textColor="#b8332e"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:maxLines="2"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="3rd Circle, lbn khaldoun Street, Beside Al Khalidi Hospital, Building No. 35"
                        android:textColor="#858585"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/Image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/schedule"
                android:scaleType="fitCenter"
                app:sriv_border_color="@android:color/transparent"
                app:sriv_border_width="4dip"
                app:sriv_left_bottom_corner_radius="12dip"
                app:sriv_left_top_corner_radius="12dip"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="12dip"
                app:sriv_right_top_corner_radius="12dip" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>