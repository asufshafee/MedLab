<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_back"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingStart="@dimen/_12sdp"
    tools:context="com.mcc.medlabs.view.Fragments.About_Developers">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mcc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/MCC"
                android:textColor="#979ea4"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/mcc_logo"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/comp_logo"

                />

            <TextView
                android:id="@+id/about_mcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ABOUT_MCC"
                android:textSize="18sp" />

            <include
                layout="@layout/social_bar"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
